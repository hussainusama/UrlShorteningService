{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "appService_UrlShorteningService_name": {
      "type": "string"
    },
    "appServicePlan_UrlShorteningServicePlan_name": {
      "type": "string"
    },
    "appServicePlan_UrlShorteningServicePlan_skuName": {
      "type": "string"
    },
    "appServicePlan_UrlShorteningServicePlan_skuTier": {
      "type": "string"
    },
    "appServicePlan_UrlShorteningServicePlan_skuFamily": {
      "type": "string"
    },
    "appServicePlan_UrlShorteningServicePlan_skuSize": {
      "type": "string"
    },
    "appServicePlan_UrlShorteningServicePlan_workerSizeId": {
      "type": "int"
    },
    "collation": {
      "type": "string"
    },
    "databaseName": {
      "type": "string"
    },
    "edition": {
      "type": "string"
    },
    "requestedServiceObjectiveId": {
      "type": "string"
    },
    "maxSizeBytes": {
      "type": "string"
    },
    "serverName": {
      "type": "string"
    },
    "diagnosticStorageAccountId": {
      "defaultValue": "",
      "type": "string"
    },
    "diagnosticsTemplate": {
      "defaultValue": "",
      "type": "string"
    },
    "sampleName": {
      "defaultValue": "",
      "type": "string"
    },
    "administratorLogin": {
      "type": "string"
    },
    "administratorLoginPassword": {
      "type": "securestring"
    },
    "version": {
      "type": "string"
    },
      "_artifactsLocation": {
          "type": "string"
      },
      "_artifactsLocationSasToken": {
          "type": "securestring"
      },
      "UrlShorteningServiceDeployPackageFolder": {
          "type": "string",
          "minLength": 1,
          "metadata": {
              "description": "WebDeploy package location. This path is relative to the _artifactsLocation parameter"
          }
      },
    "UrlShorteningServiceDeployPackageFileName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Name of the webdeploy package"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "name": "[parameters('serverName')]",
      "apiVersion": "2014-04-01-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "administratorLogin": "[parameters('administratorLogin')]",
        "administratorLoginPassword": "[parameters('administratorLoginPassword')]",
        "version": "[parameters('version')]"
      },
      "resources": [
        {
          "type": "databases",
          "name": "[parameters('databaseName')]",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "collation": "[parameters('collation')]",
            "edition": "[parameters('edition')]",
            "maxSizeBytes": "[parameters('maxSizeBytes')]",
            "requestedServiceObjectiveId": "[parameters('requestedServiceObjectiveId')]",
            "sampleName": "[parameters('sampleName')]"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
          ]
        },
        {
          "type": "firewallrules",
          "name": "AllowAllWindowsAzureIps",
          "apiVersion": "2014-04-01-preview",
          "location": "[resourceGroup().location]",
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "255.255.255.255"
          },
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('serverName'))]"
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "sku": {
        "name": "[parameters('appServicePlan_UrlShorteningServicePlan_skuName')]",
        "tier": "[parameters('appServicePlan_UrlShorteningServicePlan_skuTier')]",
        "family": "[parameters('appServicePlan_UrlShorteningServicePlan_skuFamily')]",
        "size": "[parameters('appServicePlan_UrlShorteningServicePlan_skuSize')]"
      },
      "name": "[parameters('appServicePlan_UrlShorteningServicePlan_name')]",
      "apiVersion": "2015-08-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[parameters('appServicePlan_UrlShorteningServicePlan_name')]"
      },
      "resources": [
        {
          "type": "Microsoft.Web/sites",
          "kind": "api",
          "name": "[parameters('appService_UrlShorteningService_name')]",
          "apiVersion": "2015-08-01",
          "location": "[resourceGroup().location]",
          "tags": {
            "[concat('hidden-related:', resourceId(resourceGroup().name,'Microsoft.Web/serverfarms', parameters('appServicePlan_UrlShorteningServicePlan_name')))]": "empty"
          },
          "properties": {
            "name": "[parameters('appService_UrlShorteningService_name')]",
            "serverFarmId": "[resourceId(resourceGroup().name,'Microsoft.Web/serverfarms', parameters('appServicePlan_UrlShorteningServicePlan_name'))]",
            "kind": "api"
          },
          "resources": [
            {
              "name": "MSDeploy",
              "type": "extensions",
              "location": "[resourceGroup().location]",
              "apiVersion": "2015-08-01",

              "tags": {
                "displayName": "UrlShorteningServiceDeploy"
              },
              "properties": {
                "packageUri": "[concat(parameters('_artifactsLocation'), '/', parameters('UrlShorteningServiceDeployPackageFolder'), '/', parameters('UrlShorteningServiceDeployPackageFileName'), parameters('_artifactsLocationSasToken'))]",
                "dbType": "None",
                "connectionString": "",
                "setParameters": {
                  "IIS Web Application Name": "parameters('appService_UrlShorteningService_name')"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Web/sites/', parameters('appService_UrlShorteningService_name'))]" 
              ]
            },
            {
              "type": "config",
              "name": "web",
              "apiVersion": "2015-08-01",
              "properties": {
                "apiDefinition": {
                  "url": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('appService_UrlShorteningService_name'))).hostnames[0], '/swagger/docs/v1')]"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('appService_UrlShorteningService_name'))]"
              ]
            }
          ],
          "dependsOn": [
            "[resourceId('Microsoft.Web/serverFarms', parameters('appServicePlan_UrlShorteningServicePlan_name'))]"
          ]
        }
      ]
    }
  ]
}